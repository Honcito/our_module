        <field name="name">Estudiantes</field>
        <field name="res_model">escuela.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Definición de la acción para Instructores -->
    <record id="action_instructor_list" model="ir.actions.act_window">
        <field name="name">Instructores</field>
        <field name="res_model">escuela.instructor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
