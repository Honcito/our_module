<odoo>
    <record id="view_course_form" model="ir.ui.view">
		<field name="name">escuela.course.form</field>
		<field name="model">escuela.course</field>
		<field name="arch" type="xml"></field>
			<form>
				<sheet>
					<group>
						<field name="name"></field>
						<field name="description"></field>
						<field name="schedule"></field>
						<field name="instructor_id"></field>
						<field name="student_ids" widget="many2many_tags"></field>
					</group>
				</sheet>
			</form>
	</record>

	<record id="view_course_tree" model="ir.ui.view">
		<field name="name">escuela.course.tree</field>
		<field name="model">escuela.course</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="schedule"/>
				<field name="instructor_id"/>
			</tree>
		</field>
	</record>

	<menuitem id="menu_escuela_courses" name="Courses" sequence="1" parent="base.menu_escuela_root"/>
	 <menuitem id="submenu_courses" name="Manage Courses" parent="menu_escuela_courses" action="action_course_list"/>
</odoo>